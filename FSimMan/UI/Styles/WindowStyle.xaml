<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:OliverFida.FSimMan.UI">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/UI/Resources/Brushes.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="WindowStyle" TargetType="{x:Type ui:Window}">
        <Setter Property="Background" Value="{StaticResource BgGrayBrush}" />

        <Setter Property="Width" Value="900" />
        <Setter Property="MinWidth" Value="900" />

        <Setter Property="Height" Value="500" />
        <Setter Property="MinHeight" Value="500" />
    </Style>
</ResourceDictionary>