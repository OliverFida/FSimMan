<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:OliverFida.FSimMan.UI">
    <Style x:Key="DialogWindowBaseStyle" TargetType="{x:Type ui:DialogWindow}">
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="Background" Value="{StaticResource BgGrayBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource TitleBarGrayBrush}" />
        <Setter Property="BorderThickness" Value="1" />

        <Setter Property="Width" Value="500" />
        <Setter Property="MinWidth" Value="500" />
        <Setter Property="MaxWidth" Value="500" />
        <Setter Property="Height" Value="200" />
        <Setter Property="MinHeight" Value="200" />
        <Setter Property="MaxHeight" Value="200" />
        <Setter Property="ResizeMode" Value="NoResize" />
        <Setter Property="ShowInTaskbar" Value="False" />
    </Style>

    <Style BasedOn="{StaticResource DialogWindowBaseStyle}" TargetType="{x:Type ui:DialogWindow}" />
</ResourceDictionary>