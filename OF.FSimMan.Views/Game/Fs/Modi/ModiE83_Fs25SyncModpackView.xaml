<UserControl
    x:Class="OF.FSimMan.View.Game.Fs.Modi.ModiE83_Fs25SyncModpackView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OF.FSimMan.View.Game.Fs.Modi"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ui="clr-namespace:OF.Base.Wpf;assembly=OF.Base.WpfControls"
    xmlns:vm="clr-namespace:OF.FSimMan.ViewModel.Game.Fs.Modi;assembly=OF.FSimMan.ViewModels"
    d:DataContext="{d:DesignInstance Type={x:Type vm:ModiE83_Fs25SyncModpackViewModel}}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <ui:BusyIndicator BusyContent="DEBUG" IsBusy="False">
        <StackPanel Orientation="Vertical">
            <!--  BUTTONS  -->
            <StackPanel Orientation="Horizontal">
                <ui:ImageButton
                    HorizontalAlignment="Left"
                    Command="{Binding CancelCommand}"
                    Content="Cancel"
                    ImageSource="{StaticResource XIcon}"
                    Style="{StaticResource W150ImageButtonStyle}" />
                <ui:ImageButton
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    Command="{Binding OkCommand}"
                    Content="OK"
                    ImageSource="{StaticResource CheckIcon}"
                    Style="{StaticResource W150ImageButtonStyle}" />
            </StackPanel>
        </StackPanel>
    </ui:BusyIndicator>
</UserControl>
